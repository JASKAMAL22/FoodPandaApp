<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodmenu"
    android:background="@drawable/foodback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Breakfast"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="BreadButter...........@20"
            android:textStyle="italic"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sandwich..............@35"
            android:textStyle="italic"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Milk/Coffee.............@15"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Lunch"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Dal makhni.............@30"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Shahi Paneer.........@45"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rajma,Rice.............@60"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Dinner"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Channa Dal.............@20"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Halwa.....................@50"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Matar Paneer..........@35"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

</LinearLayout>